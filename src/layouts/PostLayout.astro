---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
  <section class="grid w-full place-items-center gap-y-4">
    <h1 class="text-5xl font-bold underline decoration-blue-500">
      {frontmatter.title}
    </h1>
    <div class="flex justify-center gap-x-2">
      <span>{frontmatter.date}</span> |
      <span>{frontmatter.time}</span>
    </div>
    <div class="flex gap-x-2 md:gap-x-3 lg:gap-x-4">
      {
        frontmatter.tags
          .split(",")
          .map((tag) => (
            <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm dark:bg-blue-900 dark:text-blue-50">
              {tag}
            </span>
          ))
      }
    </div>
  </section>

  <section class="slot-content">
    <slot />
  </section>
</Layout>

<style>
  :global(.slot-content li) {
    list-style-type: disc;
    margin-left: 24px;
  }

  /* 1. Base styles */
  /* 2. Headings */
  :global(
    .slot-content h1,
    .slot-content h2,
    .slot-content h3,
    .slot-content h4,
    .slot-content h5,
    .slot-content h6
  ) {
    margin-top: 24px;
    margin-bottom: 16px;
    font-weight: 600;
    line-height: 1.25;
  }

  /* 3. Paragraphs and links */
  :global(.slot-content p) {
    margin-top: 0;
    margin-bottom: 16px;
  }

  :global(.slot-content a) {
    color: #0366d6;
    text-decoration: none;
  }

  :global(.slot-content a:hover) {
    text-decoration: underline;
  }

  /* 4. Blockquotes */
  :global(.slot-content blockquote) {
    padding: 0 1em;
    margin: 0 0 16px;
    color: #6a737d;
    border-left: 0.25em solid #dfe2e5;
  }

  /* 5. Lists */
  :global(.slot-content ul, .slot-content ol) {
    padding-left: 2em;
    margin-bottom: 16px;
  }

  :global(.slot-content li) {
    margin-bottom: 4px;
  }

  /* 6. Code styling */
  :global(.slot-content code) {
    padding: 0.2em 0.4em;
    font-size: 85%;
    background-color: rgba(27, 31, 35, 0.05);
    border-radius: 3px;
  }

  :global(.slot-content pre) {
    margin-top: 0;
    margin-bottom: 16px;
    overflow: auto;
    font-size: 85%;
    line-height: 1.45;
    background-color: #f6f8fa;
    border-radius: 3px;
    padding: 16px;
  }

  /* 7. Tables */
  :global(.slot-content table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 16px;
  }

  :global(.slot-content th, .slot-content td) {
    padding: 6px 13px;
    border: 1px solid #dfe2e5;
  }

  /* Temp Fix */
  /* To avoid the raw latex render with katax-html */
  :global(.slot-content .katex-html) {
    display: none;
  }

  :global(.slot-content .katex) {
    display: block;
    text-align: center;
    margin: 0 auto;
    padding-top: 8px;
    padding-bottom: 8px;
    font-size: 1.25rem; /* Increase font size as needed */
  }
</style>
